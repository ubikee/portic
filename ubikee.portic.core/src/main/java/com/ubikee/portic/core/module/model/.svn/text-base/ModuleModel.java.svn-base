package com.irtve.portal.core2.module.model;

import java.util.ArrayList;
import java.util.List;

import com.irtve.portal.core2.Model;
import com.irtve.portal.core2.module.descriptor.ModuleActionDescriptor;
import com.irtve.portal.core2.module.events.ModuleEvent;

/**
 * Model map
 * 
 * @author ernesto
 *
 */
@SuppressWarnings("serial")
public class ModuleModel extends Model {

	List<ModuleEvent> events;
	List<ModuleActionDescriptor> actions = new ArrayList<ModuleActionDescriptor>();
	
	/**
	 * Construct a new, empty <code>Model</code>.
	 */
	public ModuleModel() {
	}

	/**
	 * 
	 * @return
	 */
	public List<ModuleEvent> getEvents() {
		if (events == null)
			events = new ArrayList<ModuleEvent>();
		return events;
	}

	/**
	 * @param event
	 */
	public void addEvent(ModuleEvent event) {
		if (events == null)
			events = new ArrayList<ModuleEvent>();
		events.add(event);
	}
	
}
